\RequirePackage{fontspec}


\def\familydefault{\sfdefault}
\def\trek@font{\fontspec[Path=./beamer-trek/,Extension=.ttf]{Antonio-Bold}}

\setbeamerfont{frametitle}{
  family=\trek@font,
  size=\fontsize{14}{14}
}
\setbeamerfont{title in head/foot}{
  family=\trek@font,
  size=\fontsize{8}{8}
}
\setbeamerfont{title}{
  family=\trek@font,
  size=\fontsize{18}{18}
}
\setbeamerfont{subtitle}{
  family=\trek@font,
  size=\fontsize{14}{14}
}
\setbeamerfont{author}{
  family=\trek@font,
  size=\fontsize{10}{10}
}
\setbeamerfont{institute}{
  family=\trek@font,
  size=\fontsize{14}{14}
}
\setbeamerfont{date}{
  family=\trek@font,
  size=\fontsize{10}{10}
}
\setbeamerfont{enumerate item}{
  family=\trek@font,
  size=\fontsize{6}{6}
}
\setbeamerfont{enumerate subitem}{
  parent=enumerate item
}
\setbeamerfont{enumerate subsubitem}{
  parent=enumerate item
}
\setbeamerfont{itemize/enumerate body}{
  family=\sffamily,
  size=\normalsize
}
