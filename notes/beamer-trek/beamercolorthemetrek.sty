\mode<presentation> {
  \definecolor{trek@lightyellow}{HTML}{FFFF99}
  \definecolor{trek@lightorange}{HTML}{FFCC66}
  \definecolor{trek@darkorange}{HTML}{FF9933}
  \definecolor{trek@darkpurple}{HTML}{664466}
  \definecolor{trek@lightpurple}{HTML}{CC99CC}
  \definecolor{trek@lightblue}{HTML}{99CCFF}
  \definecolor{trek@midblue}{HTML}{3366CC}

  \definecolor{hs@darkpurple}{HTML}{86D6B6}
  \definecolor{hs@lightpurple}{HTML}{B699FF}
  \definecolor{hs@pink}{HTML}{E793DC}

  \setbeamercolor{palette primary}{fg=trek@lightorange}
  \setbeamercolor{palette secondary}{fg=trek@darkorange}
  \setbeamercolor{palette tertiary}{fg=trek@lightpurple}
  \setbeamercolor{palette quaternary}{fg=trek@lightorange}
  \setbeamercolor{palette sidebar primary}{fg=trek@darkorange}
  \setbeamercolor{palette sidebar secondary}{fg=trek@lightorange}
  \setbeamercolor{palette sidebar tertiary}{fg=trek@lightpurple}
  \setbeamercolor{palette sidebar quaternary}{fg=trek@midblue}

  \setbeamercolor{background canvas}{bg=black}
  \setbeamercolor{normal text}{fg=white}
  \setbeamercolor{frametitle}{fg=hs@lightpurple}
  \setbeamercolor{sidebar}{fg=hs@pink}
  \setbeamercolor{title in head/foot}{fg=hs@lightpurple}
  \setbeamercolor{title}{fg=hs@pink}
  \setbeamercolor{subtitle}{parent=frametitle}
  \setbeamercolor{institute}{parent=frametitle}
  \setbeamercolor{author}{parent=title}
  \setbeamercolor{date}{parent=title}
  \setbeamercolor{item}{use={frametitle},fg=frametitle.fg}
  \setbeamercolor{item projected}{use={frametitle},fg=black,bg=frametitle.fg}
}
\mode<handout> {
  \setbeamercolor{background canvas}{bg=white}
}
